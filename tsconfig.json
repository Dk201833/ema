{
    "compilerOptions": {
        /* Modules */
       "target": "esnext",
       "rootDir": "./src", // Where to compile from
       "outDir": "./public", // Where to compile to (usually the folder to be deployed to the web server)
 
        /* JavaScript Support */
        "allowJs": true, // Allow JavaScript files to be compiled
        "checkJs": false, // Type check JavaScript files and report errors
 
        /* Emit */
        "sourceMap": true, // Create source map files for emitted JavaScript files
        "removeComments": true, // Don't emit comments
        "noEmit": true,
       "isolatedModules": false,
       "jsx": "react",
       "lib": ["es6", "es2017"],       
     },
     "include": ["src"], // Ensure only files in src are compiled
     "exclude": ["__tests__/**/*-test.ts","node_modules", "babel.config.js", "metro.config.js", "jest.config.js"],
    "extends": "@tsconfig/react-native/tsconfig.json",
}
